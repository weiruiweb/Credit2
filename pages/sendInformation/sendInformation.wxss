page{
	min-height:100%;
	width:100%;
	background:#fff;

}
.textarea{
	padding:0 20rpx;
}
.textarea textarea{
	width:710rpx;
	height:390rpx;
	padding-top:20rpx;
	color:#999;
	font-size:30rpx;
	border-bottom:solid 1px #e0e0e0;
}
.uploder{
	padding:0px 20rpx;
}
.uploder_all{
	align-items:center;
	padding:30rpx 0;
}
.uploder_item{
	width:23%;
	margin:1%;
	height:160rpx;
	line-height:160rpx;
	text-align:center;
	overflow:hidden;
	float:left;
}
/***
.uploder_item image{
	width:90%;
	height:90%;

} ***/
.uploader__input{
	width:100%;
	height:100%;
}
.uploader__input image{
	width:100%;
	height:100%;
}
.fabu{
	padding:50rpx 20rpx;
	clear:both;
}
.fabu_left{
	width:40%;
	margin:0 5%;
	height:88rpx;
	line-height:88rpx;
	border-radius:50rpx;
	background:#00c6f7;
	text-align:center;
}
.fabu_right{
	width:40%;
	margin:0 5%;
	height:88rpx;
	line-height:88rpx;
	border-radius:50rpx;
	background:#ffc402;
	text-align:center;
}
.fabu_cont{
	display:flex;
	align-items:center;
	justify-content:center;
	color:#fff;
}
.regular{
	padding:0rpx 40rpx;

}
.regular_cont{
	width:90%;
	padding:0 5%;
	height:220rpx;
	border-radius:20rpx;
	position:relative;
	border:solid 1px #e0e0e0;
	border-radius:10rpx;
}
.regular_tlt{
	color:#4c4c4c;
	position:absolute;
	top:-25rpx;
	width:240rpx;
	height:50rpx;
	line-height:50rpx;
	text-align:center;
	background:#fff;
	left:50%;
	margin-left:-120rpx;
}
.regular_item{
	color:#666;
	margin-top:40rpx;
	line-height:40rpx;
}
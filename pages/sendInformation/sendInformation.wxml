<!--sendInformation.wxml-->
<view class="textarea">
  <textarea  type="" placeholder="请输入要发布的内容..." style="{{fonts[3].font}}">
  </textarea>
</view>
<view class="uploder">
    <view class="uploder_all">
         <block wx:for-items="{{files}}" wx:key="{{index}}">
            <view class="uploder_item" bindtap="previewImage" id="{{item}}">
                 <view class="uploader__input">
                    <image class="weui-uploader__img" src="{{item}}" mode="aspectFill" />
                 </view>
           </view>
          </block>

        <view class="uploder_item" >
          <view class="uploader__input" bindtap="chooseImage">
           <image src="/images/fabu.png"></image>
          </view>
        </view>
    </view>
</view>
<view class="fabu">
  <view class="fabu_cont"  style="{{fonts[4].font}}">
    <view class="fabu_left" bindtap="backSend">
        保存
    </view>
    <view class="fabu_right">
      发布
    </view>
  </view>
</view>
<view class="regular">
    <view class="regular_cont">
        <view class="regular_tlt" style="{{fonts[4].font}}">
            发布规则
        </view>
        <view class="regular_item"  style="{{fonts[3].font}}">
          <view>1、发布1条信息可获得30积分，每日可获得信息发布      积分上限为150积分</view>
          <view>1、发布1条信息可获得30积分，每日可获得信息发布      积分上限为150积分</view>
        </view>
    </view>
</view>
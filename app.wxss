.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.flexRowBetween{
	display:flex;
	flex-direction:row;
	justify-content:space-between;
}
/***********navbar***********/
.navbar{
	height:120rpx;
	width:100%;
	position:fixed;
	bottom:0rpx;
	z-index:999;
	background:#fff;
	display:flex;
	justify-content:center;
	border-top:solid 1px #dbdbdb;
	align-items:center;
	box-shadow:5rpx 0 15rpx #84ddf3;
}
.navbar_item{

	width:33.3%;
	text-align:center;

}
.navbar .text{
	color:#656565;
}
.navbar .this-text{
	color:#21c3d4;
}

.navigator-hover {
	background:none;
	color:#21c3d4;
}
